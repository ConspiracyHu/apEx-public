		<box class="columns">
			<label text="Scale:"/>
			<textbox id="sx" singleline="1" password="0"/>
			<textbox id="sy" singleline="1" password="0"/>
			<textbox id="sz" singleline="1" password="0"/>
		</box>
		<box class="columns">
			<label text="Rotate:"/>
			<textbox id="rx" singleline="1" password="0"/>
			<textbox id="ry" singleline="1" password="0"/>
			<textbox id="rz" singleline="1" password="0"/>
		</box>
		<box class="columns">
			<label text="Translate:"/>
			<textbox id="tx" singleline="1" password="0"/>
			<textbox id="ty" singleline="1" password="0"/>
			<textbox id="tz" singleline="1" password="0"/>
		</box>

		<button id="applymatrix" text="Calculate and Apply New Matrix"/>
	</box>
  </gui>
